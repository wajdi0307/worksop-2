<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<head>
    <title>List des contacts </title>

</head>
<body>
<h1 style="align-content: center">Liste des contacts</h1>
<form class="d-flex" method="post" action="/contact/search">
    <input class="form-control me-2" name="Search" type="search" placeholder="Search" id="Search" >
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<table class="table">
    <tr>
        <td>
            Nom et prenom
        </td>
        <td>
            GSM
        </td>
        <td>
            Action
        </td>
    </tr>
    {% for item in data %}
        <tr>

            <td>{{ item.FullName }}</td>
            <td>{{ item.Phone }}</td>
            <td><a href="/contact/delete/{{ item._id }}">delete</a>
                <a href="/contact/modifier/{{ item._id }}">Modifier</a>
            </td>

        </tr>
    {% endfor %}
</table>
</body>
</html>
