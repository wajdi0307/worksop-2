    {% if data == null %}


    <h1>Add new Contact</h1>
    <form method="post" action="/contact/addAction">
        <input type="text" name="fullname" id="fullname"/><br/>
        <input type="number" name="phone" id="name"/><br/>
        <input type="submit" value="OK"/><br/>
    </form>
    {% endif %}
    {% if data != null %}
        <h1>update new Contact</h1>
        <form method="post" action="/contact/update/{{ data._id }}">
            <input type="text" name="fullname" id="fullname" value="{{ data.FullName }}"/><br/>
            <input type="number" name="phone" id="name" value="{{ data.Phone }}"/><br/>
            <input type="submit" value="OK"/><br/>
        </form>
    {% endif %}